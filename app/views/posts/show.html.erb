<h2><%= @post.title %></h2>

<h3><%= @post.content %></h3>

<h4> Categories: </h4>
  <ul>
  <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
    <%end%>
  </ul>

<h4> Comments: </h4>
  <ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
    <%end%>
  </ul>

<h4> Add A Comment: </h4>
  <%= form_for(@comment) do |f| %>
      <%= f.text_area :content %>

<h4> New User: </h4>    
      <%= f.fields_for :users, User.new do |user_builder| %>
        <p><%= user_builder.text_field :username %></p>
      <%end%>
    <%= f.submit %>
    <%end%>


<h3> Commentors: </h3>
<ul>
<% @post.comments.each do |comment| %>
  <li><%= comment.user.username %></li>
  <%end%>
<!--Still need to create logic for unique users -->
</ul>
